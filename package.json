{
	"name": "@rbxts/input-actions",
	"version": "0.3.5",
	"description": "A flexible input system for Roblox TypeScript inspired by Godot's input handling, providing action mapping, context switching, and advanced input utilities.",
	"main": "out/init.lua",
	"types": "out/index.d.ts",
	"scripts": {
		"build": "rbxtsc",
		"watch": "rbxtsc -w",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "eslint \"src/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"roblox-ts",
		"input",
		"controller",
		"gamepad",
		"keyboard",
		"mouse",
		"touch",
		"actions"
	],
	"author": "Catargo",
	"license": "MIT",
	"files": [
		"out",
		"!**/*.tsbuildinfo",
		"default.project.json"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@rbxts/compiler-types": "^3.0.0-types.0",
		"@rbxts/types": "^1.0.813",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-roblox-ts": "^0.0.36",
		"prettier": "^3.4.2",
		"roblox-ts": "^3.0.0",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@rbxts/services": "^1.5.5",
		"@rbxts/tool_pack": "^2.1.8"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Velover/input-actions.git"
	},
	"bugs": {
		"url": "https://github.com/Velover/input-actions/issues"
	},
	"homepage": "https://github.com/Velover/input-actions#readme"
}
